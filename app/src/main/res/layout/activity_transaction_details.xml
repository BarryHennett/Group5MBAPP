<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".TransactionDetails"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backbuttondetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8sp"
                android:background="@android:color/transparent"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:src="@drawable/arrow_left" />

            <TextView
                android:id="@+id/user_add_income_txt_title"
                style="@style/heading_22_white_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16sp"
            android:background="@drawable/background_mdblack"
            android:orientation="vertical"
            android:padding="16sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    style="@style/body_10_lightgray_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expense category*" />

                <TextView
                    android:id="@+id/expensecategory"
                    style="@style/body_10_lightgray_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" category" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/body_10_lightgray_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expense date*" />

                <TextView
                    android:id="@+id/expensedate"
                    style="@style/body_12_white_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2024-05-05" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/body_10_lightgray_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total cost (NZD)*" />

                <TextView
                    android:id="@+id/expensecost"
                    style="@style/body_12_white_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1234" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/body_10_lightgray_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expense Description" />

                <TextView
                    android:id="@+id/expensedesc"
                    style="@style/body_12_white_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expense Description" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/body_10_lightgray_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expense Type" />

                <TextView
                    android:id="@+id/expensetype"
                    style="@style/body_12_white_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expense Type" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/body_10_lightgray_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attachment" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/body_10_lightgray_medium"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16sp"
                        android:text="pdf" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/user_add_income_view_receipt"
                            style="@style/body_10_white_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textAllCaps="false" />

                        <Button
                            android:id="@+id/user_add_income_change_receipt"
                            style="@style/body_10_white_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/user_add_income_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:itemIconTint="@drawable/nav_item_colors"
        app:itemTextColor="@drawable/nav_item_colors"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navigation" />
</LinearLayout>